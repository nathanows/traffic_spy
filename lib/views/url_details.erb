<div class="jumbotron">
  <div class="container">
    <h1><%= identifier %> <%= path %></h1>
    <p>URL Specific Data</p>
  </div>
</div>

<div class="container">
  <h2>URL Statistics</h2>
  <div class="row">
    <div class="col-md-6">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th>Longest Reponse Time</th>
            <td><%= longest_resp_time %></td>
          </tr>
          <tr>
            <th>Shortest Reponse Time</th>
            <td><%= shortest_resp_time %></td>
          </tr>
          <tr>
            <th>Average Reponse Time</th>
            <td><%= avg_resp_time %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th>HTTP Verbs Used</th>
            <td><%= http_verbs %></td>
          </tr>
          <tr>
            <th>Most Popular Referrers</th>
            <td><%= popular_referrers %></td>
          </tr>
          <tr>
            <th>Most Popular User Agents</th>
            <td><%= popular_user_agents %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
